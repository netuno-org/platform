{
  "extends": "standard",
    "plugins": [
      "chai-friendly"
    ],
    "rules": {
      "indent": ["warn", 2, {"ArrayExpression": "off", "SwitchCase": 1}],
      "semi": [2, "always"],
      "space-before-function-paren": ["error", "never"],
      "no-useless-escape": 0,
      "no-unused-expressions": 0,
      "chai-friendly/no-unused-expressions": 2,
      "comma-dangle": ["error", "always-multiline"]
    },
    "env": {
      "es6": true,
      "browser": true,
      "jquery": true,
      "mocha": true
    }
}
