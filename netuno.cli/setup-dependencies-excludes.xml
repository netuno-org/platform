<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>install-jar-with-dependencies-excludes</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>org.eclipse.jetty:jetty-server</exclude>
                <exclude>org.eclipse.jetty.ee10:jetty-ee10-webapp</exclude>
                <exclude>org.eclipse.jetty.ee10:jetty-ee10-servlet</exclude>
                <exclude>org.eclipse.jetty.ee10.websocket:jetty-ee10-websocket-jakarta-server</exclude>
                <exclude>com.github.oshi:oshi-core</exclude>
                <exclude>org.graalvm.polyglot:polyglot</exclude>
                <exclude>org.graalvm.polyglot:js</exclude>
		        <exclude>org.graalvm.js:js-scriptengine</exclude>
                <exclude>org.quartz-scheduler:quartz</exclude>
                <exclude>org.quartz-scheduler:quartz-jobs</exclude>
                <exclude>commons-net:commons-net</exclude>
                <exclude>com.sun.mail:jakarta.mail</exclude>
                <exclude>jakarta.mail:jakarta.mail-api</exclude>
                <exclude>com.jcraft:jzlib</exclude>
		        <exclude>com.hierynomus:sshj</exclude>
                <exclude>org.bouncycastle:bcprov-jdk18on</exclude>
                <exclude>org.bouncycastle:bcpkix-jdk18on</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>${project.build.outputDirectory}</directory>
        </fileSet>
    </fileSets>
</assembly>
